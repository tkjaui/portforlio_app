<h1>ユーザー一覧</h1>


<% @users.each do |user| %>  
  <div class="col-md-3">
    <div class="card" style="card mb-3 shadow-sm">
      <%= link_to user_path(user) do %>
        <%= attachment_image_tag user, :profile_image, fallback: "no-image.png", size: "200x200" %>
      <% end %>
      <div class="card-body">
        <h4 class="card-title">ユーザー名：<%= link_to user.username, user_path(user) %> </h4>
        <h4 class="card-title">投稿数：<%= user.services.count %> </h4>
      </div>
    </div>  
  </div>
<% end %>