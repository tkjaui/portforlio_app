<h1>マイページ</h1>


<%= attachment_image_tag @user, :profile_image, fallback: "no-image.png", size: "400x400"%>
<%= @user.username %>
<% if @user.id == current_user.id %>
  <td>
    <%= @user.email %>
  </td>
  <td>
    <%= link_to "編集", edit_user_path(@user), class:"btn btn-primary" %>
  </td>
<% end %>
<%= @user.profile %><br>

<% @user.services.each do |service| %>
  <%= link_to service_path(service) do%>
    <%= attachment_image_tag service, :image, size:10*10 %>
  <% end %>
  <%= service.updated_at.strftime("%Y-%m-%d %H:%M") %>更新<br>
  <%= link_to "詳細", service_path(service) %><br>
  <% if @user.id == current_user.id %>
    <%= link_to "編集", edit_service_path(service) %><br>
    <%= link_to "削除", service_path(service), method: :delete, data:{confirm:"削除しますか？"} %><br>
  <% end %>
<% end %> 
